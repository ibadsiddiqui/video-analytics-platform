# Video Analytics Platform - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
# Use Vercel Postgres, Neon, Supabase, or Railway
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# ===========================================
# REDIS (Upstash)
# ===========================================
# Get from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL="https://your-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-token-here"

# ===========================================
# YOUTUBE DATA API
# ===========================================
# Get from: https://console.cloud.google.com/
# 1. Create a project
# 2. Enable YouTube Data API v3
# 3. Create API Key (restrict to YouTube Data API)
YOUTUBE_API_KEY="your-youtube-api-key"

# ===========================================
# INSTAGRAM (Optional - via RapidAPI)
# ===========================================
# Instagram's official API is restricted
# Use RapidAPI Instagram Scraper as alternative
# Get from: https://rapidapi.com/
RAPIDAPI_KEY="your-rapidapi-key"

# ===========================================
# APP CONFIGURATION
# ===========================================
NODE_ENV="development"
PORT=3001

# Frontend URL for CORS
FRONTEND_URL="http://localhost:3000"

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache TTL (seconds)
CACHE_TTL_SECONDS=3600
